// app global css

a{text-decoration: none}

@font-face {
    font-family: 'sofia_prolight';
    src: url('../assets/sofia-pro/sofiapro-light-webfont.eot');
    src:url('../assets/sofia-pro/sofiapro-light-webfont.eot?#iefix') format('embedded-opentype'),
    url('../assets/sofia-pro/sofiapro-light-webfont.woff2') format('woff2'),
    url('../assets/sofia-pro/sofiapro-light-webfont.woff') format('woff'),
    url('../assets/sofia-pro/sofiapro-light-webfont.ttf') format('truetype');
    font-weight:normal;font-style:normal
}

body{font-family: 'sofia_prolight';background: #f2f2f2}

.toolbar-height{height:60px}
.padding-v-30{padding:30px 0}
.cursor-pointer{cursor: pointer}
.q-item{color:#555}
.q-list-separator .q-item{border-bottom:1px solid #ddd !important}
.q-list-separator a:last-child .q-item{border-bottom:0 !important}
.q-item:hover{color:#fff;background-color: #39f !important}

.main-title{font-size: 22px}

.form{margin-top:50px}
.form .card{width:500px;background:#fff}
.form .title{font-size: 30px}
.form .subtitle{font-size: 16px}
.form .button{margin-top:30px}

.options .content{width:500px;background:#fff}


